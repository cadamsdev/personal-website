---
import MainLayout from '../layouts/MainLayout.astro';
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

function getYearsSince(pastDate: Date): number {
  const today = new Date();
  const yearsDifference = today.getFullYear() - pastDate.getFullYear();
  const isBeforeBirthday =
    (today.getMonth(), today.getDate()) <
    (pastDate.getMonth(), pastDate.getDate());
  return yearsDifference - +isBeforeBirthday;
}

const age = getYearsSince(new Date('1994-04-29'));
const yearsExperience = getYearsSince(new Date('2015-09-01'));
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} - About`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <MainLayout>
      <div class="col-start-4 col-span-4 flex justify-center pt-16">
        <div>
          <h2 class="text-4xl font-bold text-deep-carrot-orange mb-6">
            About me
          </h2>
          <p class="text-xl leading-relaxed mb-4">
            I am a {age} year old Software Developer from Bluffton, SC. I build all
            sorts of software but I mainly specialize in full stack web development.
            I have been professionally developing software for over
            {yearsExperience} years now. My passion has been creating user interfaces
            because I enjoy making software visually appealing and giving users a
            better experience.
          </p>

          <p class="text-xl leading-relaxed mb-4">
            I have an associates degree in Computer Programming from <a
              class="font-bold underline hover:no-underline"
              href="https://www.sctcc.edu/"
              target="_blank">St Cloud Technical and Community College</a
            > located in St Cloud, MN. I also currently work as a Senior Software
            Engineer at <a
              class="font-bold underline hover:no-underline"
              href="https://www.experian.com/">Experian</a
            >.
          </p>

          <p class="text-xl leading-relaxed mb-4">
            A little bit more about myself. I love open source software. I'm a
            huge fan of Linux. My favorite linux distro is <a
              class="font-bold underline hover:no-underline"
              href="https://neon.kde.org/">KDE Neon</a
            >.
          </p>
        </div>
      </div>

      <div class="col-start-8 col-span-5 flex items-end justify-center">
        <img src="profile-pic.jpg" alt="Profile picture" />
      </div>
    </MainLayout>
  </body>
</html>
